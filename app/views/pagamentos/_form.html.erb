<%= form_for @pagamento, :html => { :class => "form-horizontal pagamento" } do |f| %>
  
  <div class="form-group">
    <%= f.label :valor_inscrição, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:curso_id, Curso.all, :id, :valor_inscricao, {include_blank: true}, :class => 'form-control') %>
      <%=f.error_span(:curso_id) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dinheiro, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dinheiro, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dinheiro) %>
  </div>
  <div class="form-group">
    <%= f.label :troco, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :troco, :class => 'form-control' %>
    </div>
    <%=f.error_span(:troco) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= button_to "Pagar", nil, class: "btn btn-warning" %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                matriculas_path, :class => 'btn btn-default' %>
   </div>
  </div>

<% end %>
