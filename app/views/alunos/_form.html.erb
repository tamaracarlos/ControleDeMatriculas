<%= form_for @aluno, :html => { :class => "form-horizontal aluno" } do |f| %>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
      <%= f.error_span(:nome) %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :telefone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telefone, type:"number", :class => 'form-control' %>
      <%= f.error_span(:telefone) %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :cpf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cpf, type:"number", :class => 'form-control' %>
      <%= f.error_span(:cpf) %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :rg, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rg, type:"number", :class => 'form-control' %>
      <%= f.error_span(:rg) %>
    </div>   
  </div>
  <div class="form-group">
    <%= f.label :data_de_nascimento, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :data_nascimento, :class => 'form-control' %>
      <%= f.error_span(:data_nascimento) %>
    </div>    
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                alunos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>