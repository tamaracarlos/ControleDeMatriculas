<%- model_class = Curso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @curso.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor_inscricao) %>:</strong></dt>
  <dd><%= @curso.valor_inscricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:periodo) %>:</strong></dt>
  <dd><%= @curso.periodo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              cursos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_curso_path(@curso), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              curso_path(@curso),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
