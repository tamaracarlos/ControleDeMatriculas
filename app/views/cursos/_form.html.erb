<%= form_for @curso, :html => { :class => "form-horizontal curso" } do |f| %>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
      <%=f.error_span(:nome) %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :valor_inscrição, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor_inscricao, :class => 'form-control' %>
      <%=f.error_span(:valor_inscricao) %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :período, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= select("curso", "periodo", 
              options_for_select({ "1 - Matutino" => "1", "2 - Vespertino" => "2", "3 - Integral" => "3" }),
              {include_blank: true}, :class => 'form-control') %>
    <%=f.error_span(:periodo) %>
    </div>    
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cursos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>