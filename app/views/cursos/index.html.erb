<%- model_class = Curso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <%= form_tag cursos_path, method: :get, class: "navbar-form navbar-right" do %>
  <div class="form-group">
    <%= text_field_tag 'busca', nil, class: "form-control" %>
    <%= button_to "Buscar", nil, class: "btn btn-default" %>
  </div>
  <% end %> 
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:valor_inscrição) %></th>
      <th><%= model_class.human_attribute_name(:período) %></th>      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.nome %></td>
        <td><%= curso.valor_inscricao %></td>
        <td><%= curso.periodo %></td>     
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_curso_path(curso), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      curso_path(curso),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_curso_path,
            :class => 'btn btn-primary' %>
